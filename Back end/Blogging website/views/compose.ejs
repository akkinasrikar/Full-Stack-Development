<%- include('partials/header') -%>


<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label>Title</label><br>
        <input type="text" class="form-control" name="composetitle" placeholder="Title" autocomplete="off"><br>
        <label>Description</label><br>
        <textarea name="composearea" class="form-control" rows="5" cols="30" placeholder="Compose your blog here" autocomplete="off"></textarea><br>
    </div>
    <button type="submit" class="btn btn primary" name="composebtn">Publish</button>
</form>
<%- include('partials/footer') -%>